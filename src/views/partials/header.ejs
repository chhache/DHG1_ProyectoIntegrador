<header>        
    <div class="main-header">
        <div class="container container-flex">
            <!-- class -> se puede repetir se usasn en CSS / ID -> son unicos, se usan en JS -->
            <div class="main-header__container"> 
                <img class="main-header__img" src="images/logo-dCompras-01.svg" alt="Logo dCompras">       
                <!-- <h1 class="main-header__title">dCompras</h1>  -->
                <span class="icon-menu" id="btn-menu"><i class="fas fa-bars"></i></span>                
            </div>             
            <div class="main-header__container">
                <span class="main-header__txt">Ayuda</span>
                <p class="main-header__txt"> <i class="fas fa-phone"></i>  Tel +54 011-123456</p>                
            </div>  
            <div class="main-header__container">
                <a href="/users/login" target="_blank" class="main-header__link__txt"> Inicia Sesi√≥n  |  Registrate </a> 
                <a href="/users/login" target="_blank" class="main-header__link"><i class="fas fa-user"></i></a> 
                <a href="/products/productsCart" class="main-header__btn">Mis Compras  | <i class="fas fa-shopping-cart"></i></a>
                <input type="search" class="main-header__input" placeholder="Buscar producto...">
                <!-- <i class="fas fa-search"></i> -->
            </div>
        </div>
        <nav class="main-nav" id="main-nav">
            <!-- atajo EMET -> ul.menu>li.menu__item*5>a.menu__link -->
            <ul class="menu">
                <li class="menu__item"><a href="/products" class="menu__link">Todos los productos</a></li>
                <li class="menu__item"><a href="#" class="menu__link">Ofertas</a></li>
                <li class="menu__item"><a href="/products/create" class="menu__link">Crear producto</a></li>
                <li class="menu__item"><a href="#" class="menu__link">Ayuda</a></li>
                <% if (locals.isLogged) { %>
					<li>
						<a href="#" id="dropUser" role="button">
							<img src="/images/users/<%= locals.userLogged.image %>" width="40" style="border-radius: 100%;">
							Hi <%= locals.userLogged.firstName %> 
						</a>
						<ul>
							<a href="/users/profile">Perfil</a>
							<li><hr></li>
							<a href="/users/logout">Salir</a>
						</ul>
					</li>
				<% } else { %>
					<li><a href="/users/register">Registrarse</a></li>
					<li><a href="/users/login">Loguearse</a></li>
				<% } %>
                <!-- <li class="menu__item"><a href="" class="menu__link">Contacto</a></li> -->
            </ul>
        </nav>
    </div>
</header>