<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>
<body>
    <header>     
        <div class="main-header">
            <div class="container-flex">
                <div class="main-header__container"> 
                  <a href="/"><img class="main-header__img" src="/images/logo-dCompras-01.svg" alt="Logo dCompras"></a>       
                </div>                               
            </div>            
        </div> 
    </header>
    <div class="banner-psc">
        <img src="/images/carrusel3.jfif" alt="Banner">
    </div> 
 <main>
   <section class="productDetails">    
    <div class="detail-container">
        <div class="left-col">
          <div class="img-product">             
            <img src="/images/<%= product.image1 %>" alt="product image">          
          </div>
          <div class="carrousel-img" >
            <div><img src="/images/<%= product.image2 %>" ></div>
            <div><img src="/images/<%= product.image3 %>" ></div>
            <div><img src="/images/<%= product.image4 %>" ></div>
          </div>
        </div>
        <div class="right-col">
            <div class="reputation">
                <a>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                </a>
               <span>   36 vendidos</span>
            </div>
             <div class="product-info">
                 <h2 class="product-name"><%= product.name %></h2>
                 <div class="img-product">
                    <img src="/images/<%= product.image1 %>" />
                </div>
                 <h3 class="product-price">$<%= product.price %></h3>
                 <p class="stock">Stock disponible</p>
             </div>
             <div class="quantity-btn">
                 <button class="minus">-</button>
                 <input type="number" class="quantity-product" value="1">
                 <button class="plus">+</button>
             </div>
             <div class="actions">
                 <button class="btn primary-btn">Comprar</button>
                 <button class="btn secondary-btn">Agregar al carrito</button>
                 <br>
                 <a href="/products/edit/<%= product.id %>" class="btn primary-btn">Editar producto</a> 
                 <form action="/products/<%= product.id %>?_method=DELETE" method="POST" enctype="multipart/form-data" style="display: inline-flex">
                    <button type="submit" class="btn secondary-btn">Eliminar producto</button> 
			    </form>
             </div>
             <div class="product-description">
                 <p>Descripci√≥n del producto</p>
                 <p><%= product.description %></p>
             </div>
        </div>
     </div>     
    </section>                
    </main>
    <%- include('./partials/footer') %>
    </body>
</html>