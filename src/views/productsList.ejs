<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %>
<body>
    <%- include('./partials/header') %> 
    <!-- <div class="banner-psc"> -->
        <div class="banner-psc">    
            <!-- <img src="images/carrusel3.jfif" alt="Banner"> -->
            <img src="/images/1955-chuck-taylor-all-star-1594222823.jpg" alt="Banner">
        </div> 
   
        <main class="main">
            <div class="container">  
                <!-- <h2 class="main-title">Todos los productos</h2>               -->
                <!-- <h2 class="main-title">Art√≠culos </h2> -->
                    <section class="container-products">
                        <!-- .product*4>img.producto__img+product__description>h3.product__title+span.product__price  -->
                          
                        <div class="product">
                            <% for (let i =0; i< products.length; i++){ %>
                            <div class="card-product">
                            <a href="/products/<%= products[i].id %>" rel="noopener noreferrer">    <!-- LINKEAR CORRECTAMENTE CON EJS.  -->
                                <article>                                     
                                     <img src="/images/<%= products[i].image1 %>" alt="Zapatillas" >
                                        <div class="main-article">
                                            <i class="fas fa-truck"></i>
                                            <p class="price"><strong>$ <%= products[i].price %></strong></p>
                                            <p class="discount" style="color: blue"><strong>% <%= products[i].discount %></strong>  </p>
                                            <h4 class="name"> <%= products[i].name %></h4>
                                        </div>
                                    </article>  
                                </a>
                            <!-- <a href="/productCart" rel="noopener noreferrer"> -->
                            <a href="/detail" rel="noopener noreferrer">    
                            <i class="product__icon fas fa-cart-plus"></i>
                            </a>
                           </div>
                            <% } %>                                
                        </div>                               
                    </section>
            </div>            
        </main>
        <%- include('./partials/footer') %>                
    </body>
</html>
